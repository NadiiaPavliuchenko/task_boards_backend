{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "lib": ["ES2021"],
    "module": "CommonJS",
    "moduleResolution": "node",
    // "paths": {
    //   "types/*": ["./types/*"],
    //   "app/*": ["./app/*"],
    //   "infra/*": ["./infra/*"]
    // },
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2019"
  },
  "include": ["src/**/*.ts"]
}
